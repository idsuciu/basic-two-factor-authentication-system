{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}
    <form class="form-signin" method="post">
        <div id="error" class="alert alert-danger d-none"></div>
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="inputCode" class="sr-only">Code</label>
        <input type="code" name="code" id="inputCode" class="form-control code-input" placeholder="Code" required>
        <p id="countdown" align="center"></p>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <button class="btn btn-lg btn-primary btn-block js-code" type="submit">
            Sign in
        </button>
    </form>
{% endblock %}

